    "version": "0.2.0",
    "configurations": [
        {
            "name": "temp_C++",
            "type": "cppdbg",
            "request": "launch",
            "program": "${fileDirname}/__temp.exe",
            "args": [],
            "stopAtEntry": true,
            "cwd": "${workspaceFolder}",
            "externalConsole": true,
            "environment": [],
            "preLaunchTask": "g++",
            "MIMode": "gdb",
            "miDebuggerPath": "D:/software/MinGW/bin/gdb.exe",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        },
        {
            "name": "temp_Python",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "stopOnEntry": false
        }
    ]
}